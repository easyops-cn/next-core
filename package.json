{
  "name": "next-core",
  "private": true,
  "homepage": "https://github.com/easyops-cn/next-core",
  "repository": {
    "type": "git",
    "url": "git@github.com:easyops-cn/next-core.git"
  },
  "license": "GPL-3.0",
  "scripts": {
    "prepare": "lerna bootstrap && husky install",
    "start": "lerna run start --scope \"@next-core/brick-container\"",
    "serve": "brick-container-serve --no-mock --local-container",
    "serve:e2e": "cross-env NODE_ENV='e2e-test' brick-container-serve",
    "build": "lerna run build",
    "docs:build": "lerna run docs:build",
    "docs:dev": "lerna run docs:dev",
    "postbuild": "npm run size-limit",
    "size-limit": "size-limit",
    "test": "test-next-project",
    "test:ci": "lerna run test:ci --",
    "yo": "brick-scripts -t dll",
    "yo-debug": "node --inspect-brk ./packages/brick-scripts/dist/index.js -t dll",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run --record",
    "cypress:run:no-record": "cypress run",
    "test:e2e:ci": "npx start-server-and-test serve:e2e http://localhost:8081/next/ cypress:run",
    "test:e2e:no-record": "npx wait-on -r http://localhost:8081/next/ && npx start-server-and-test serve:e2e http://localhost:8081/next/ cypress:run:no-record",
    "test:e2e:docker": "docker-compose run --user $(id -u):$(id -g) e2e",
    "lint-staged": "lint-staged"
  },
  "browserslist": {
    "development": [
      "extends @next-core/browserslist-config-next/development"
    ],
    "production": [
      "extends @next-core/browserslist-config-next/production"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/types": "^7.20.7",
    "@cypress/browserify-preprocessor": "^3.0.2",
    "@next-core/test-next": "^0.0.0",
    "@size-limit/file": "^8.1.2",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/file-saver": "^2.0.5",
    "@types/fs-extra": "^9.0.13",
    "@types/history": "^4.7.11",
    "@types/inquirer": "^7.3.3",
    "@types/jest": "^29.4.0",
    "@types/js-yaml": "^3.12.7",
    "@types/klaw-sync": "^6.0.1",
    "@types/lodash": "^4.14.191",
    "@types/meow": "^5.0.0",
    "@types/node": "^16.18.12",
    "@types/prettier": "^2.7.2",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "babel-jest": "^29.4.3",
    "buffer": "^6.0.3",
    "cross-env": "^7.0.3",
    "cypress": "^12.5.1",
    "eslint": "^8.34.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "jest-environment-jsdom": "^29.4.3",
    "jest-fetch-mock": "^3.0.3",
    "jest-websocket-mock": "^2.4.0",
    "lerna": "^6.4.1",
    "lint-staged": "^13.1.2",
    "mock-socket": "^9.1.5",
    "null-loader": "^4.0.1",
    "prettier": "^2.8.4",
    "rimraf": "^3.0.2",
    "timers-browserify": "^2.0.12",
    "ts-jest-resolver": "^2.0.0",
    "typescript": "5.0.0-beta"
  },
  "workspaces": [
    "bricks/*",
    "packages/!(brick-dll|fontawesome-library|editor-bricks-helper|less-plugin-css-variables|custom-antd-styles|babel-runtime-helpers|next-docs|webpack-config-factory|build-config-factory|brick-kit|brick-icons|brick-utils|brick-types|dev-dependencies|dll-differ|easyops-analytics|easyops-illustrations|jest-config-factory|typedoc-plugin-filter-inherit|storyboard|storyboard-function-types|brick-scripts|sdk-scripts|repo-config|public-scoped-sdk|next-docs)/**"
  ],
  "resolutions": {
    "@babel/parser": "^7.20.15",
    "@babel/runtime": "^7.20.13",
    "@types/react": "^18.0.28",
    "lodash": "^4.17.21",
    "moment": "^2.29.4"
  },
  "dependencies": {
    "concurrently": "^7.6.0"
  }
}
