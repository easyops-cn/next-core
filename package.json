{
  "name": "next-core",
  "private": true,
  "homepage": "https://github.com/easyops-cn/next-core",
  "repository": {
    "type": "git",
    "url": "git@github.com:easyops-cn/next-core.git"
  },
  "license": "GPL-3.0",
  "scripts": {
    "prepare": "lerna bootstrap && husky install",
    "start": "lerna run start --scope \"@next-core/brick-container\"",
    "serve": "brick-container-serve",
    "serve:ci": "brick-container-serve --subdir --local-settings --no-live-reload --standalone",
    "build": "lerna run build",
    "docs:build": "lerna run docs:build",
    "docs:dev": "lerna run docs:dev",
    "postbuild": "npm run size-limit",
    "size-limit": "size-limit",
    "test": "cross-env NODE_ENV='test' jest",
    "test:ci": "cross-env NODE_ENV='test' CI=true jest --ci",
    "yo": "brick-scripts -t dll",
    "yo-debug": "node --inspect-brk ./packages/brick-scripts/dist/index.js -t dll",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run --record",
    "cypress:run:no-record": "cypress run",
    "test:e2e:ci": "npx wait-on -r http://localhost:8081/next/ && npx start-server-and-test serve:ci http://localhost:8081/next/ cypress:run",
    "test:e2e:no-record": "npx wait-on -r http://localhost:8081/next/ && npx start-server-and-test serve:ci http://localhost:8081/next/ cypress:run:no-record",
    "test:e2e:docker": "docker-compose run --user $(id -u):$(id -g) e2e",
    "lint-staged": "lint-staged"
  },
  "browserslist": {
    "development": [
      "extends @next-core/browserslist-config-next/development"
    ],
    "production": [
      "extends @next-core/browserslist-config-next/production"
    ]
  },
  "devDependencies": {
    "@ant-design/compatible": "^1.0.8",
    "@ant-design/icons": "^4.5.0",
    "@babel/core": "^7.14.6",
    "@babel/types": "^7.14.5",
    "@cypress/browserify-preprocessor": "^3.0.1",
    "@easyops-cn/api-documenter": "^7.9.3",
    "@microsoft/api-extractor": "^7.13.1",
    "@next-bricks/basic-bricks": "^1.122.1",
    "@next-bricks/basic-providers": "^1.3.0",
    "@next-bricks/general-auth": "^1.4.12",
    "@next-micro-apps/general-auth": "^1.0.9",
    "@size-limit/file": "^4.12.0",
    "@types/enzyme": "^3.10.8",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/file-saver": "^2.0.2",
    "@types/fs-extra": "^9.0.11",
    "@types/history": "^4.7.8",
    "@types/inquirer": "^7.3.2",
    "@types/jest": "^26.0.23",
    "@types/js-yaml": "^3.12.6",
    "@types/klaw-sync": "^6.0.0",
    "@types/lodash": "^4.14.170",
    "@types/meow": "^5.0.0",
    "@types/node": "^12.20.15",
    "@types/prettier": "^2.3.0",
    "@types/react": "^16.14.8",
    "@types/react-dom": "^16.9.13",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "antd": "~4.12.3",
    "babel-jest": "^27.0.2",
    "buffer": "^4.9.2",
    "cross-env": "^7.0.3",
    "cypress": "^7.5.0",
    "d3-drag": "^2.0.0",
    "d3-force": "^2.1.1",
    "d3-hierarchy": "^2.0.0",
    "d3-selection": "^2.0.0",
    "d3-shape": "^2.1.0",
    "d3-zoom": "^2.0.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.6",
    "enzyme-to-json": "^3.6.2",
    "eslint": "^7.28.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "jest-websocket-mock": "^2.2.1",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "mock-socket": "^9.0.3",
    "null-loader": "^4.0.1",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "timers-browserify": "^2.0.12",
    "typescript": "~4.3.4"
  },
  "workspaces": [
    "packages/*",
    "dll/*"
  ],
  "resolutions": {
    "@babel/parser": "^7.14.6",
    "@babel/runtime": "^7.14.6",
    "@types/react": "^16.14.8",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "rc-tabs": "~11.7.3",
    "rc-textarea": "~0.3.4",
    "rc-virtual-list": "^3.2.6"
  }
}
