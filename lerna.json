{
  "packages": [
    "packages/!(brick-dll|fontawesome-library|editor-bricks-helper|less-plugin-css-variables|custom-antd-styles|babel-runtime-helpers|next-docs)/**"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "stream": true,
  "useWorkspaces": true,
  "useNx": true,
  "conventionalCommits": true,
  "command": {
    "publish": {
      "npmClient": "npm",
      "allowBranch": ["master", "legacy/**"],
      "verifyAccess": false,
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org"
    }
  }
}
