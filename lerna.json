{
  "packages": ["packages/*", "dll/*", "v3/*"],
  "version": "independent",
  "npmClient": "yarn",
  "stream": true,
  "useWorkspaces": true,
  "useNx": true,
  "conventionalCommits": true,
  "command": {
    "publish": {
      "npmClient": "npm",
      "allowBranch": ["master", "legacy/**"],
      "verifyAccess": false,
      "message": "chore(release): publish",
      "registry": "https://registry.npmjs.org"
    }
  }
}
