{
  "name": "$kebab-repo-name$",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prepare": "lerna bootstrap",
    "start": "lerna run start",
    "build": "npm run build:libs && npm run build:bricks && npm run build:templates && npm run build:micro-apps",
    "build:libs": "if [ -d libs ]; then lerna run build --scope \"@libs/*\"; else echo \"no libs\"; fi",
    "build:bricks": "if [ -d bricks ]; then lerna run build --scope \"@bricks/*\"; else echo \"no bricks\"; fi",
    "build:templates": "if [ -d templates ]; then lerna run build --scope \"@templates/*\"; else echo \"no templates\"; fi",
    "build:micro-apps": "if [ -d micro-apps ]; then lerna run build --scope \"@micro-apps/*\"; else echo \"no micro-apps\"; fi",
    "postbuild": "npm run size-limit",
    "size-limit": "size-limit",
    "serve": "brick-container-serve",
    "test": "cross-env NODE_ENV='test' jest",
    "test:ci": "cross-env NODE_ENV='test' CI=true jest --ci",
    "yo": "brick-scripts",
    "yo-debug": "node --inspect-brk ./node_modules/@easyops/brick-scripts/dist/index.js"
  },
  "browserslist": {
    "development": ["extends @easyops/browserslist-config-next/development"],
    "production": ["extends @easyops/browserslist-config-next/production"]
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@bricks/basic-bricks": "latest",
    "@easyops/babel-preset-next": "latest",
    "@easyops/brick-container": "latest",
    "@easyops/brick-scripts": "latest",
    "@easyops/browserslist-config-next": "latest",
    "@easyops/build-config-factory": "latest",
    "@easyops/eslint-config-next": "latest",
    "@easyops/webpack-config-factory": "latest",
    "@size-limit/preset-app": "^2.2.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@types/classnames": "^2.2.9",
    "@types/d3": "^5.7.2",
    "@types/dompurify": "^2.0.0",
    "@types/echarts": "^4.4.1",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/history": "^4.7.3",
    "@types/jest": "^24.0.23",
    "@types/lodash": "^4.14.148",
    "@types/lolex": "^5.1.0",
    "@types/node": "^10.12.18",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "@types/react-test-renderer": "^16.9.1",
    "@types/react-transition-group": "^4.2.3",
    "@types/yaml": "^1.2.0",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "babel-jest": "^24.9.0",
    "cross-env": "^6.0.3",
    "document-register-element": "^1.14.3",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "enzyme-to-json": "^3.4.3",
    "eslint": "^6.6.0",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "husky": "^3.0.9",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^24.9.0",
    "jest-environment-jsdom-fourteen": "^0.1.0",
    "lerna": "^3.18.4",
    "lint-staged": "^9.4.3",
    "lolex": "^5.1.1",
    "prettier": "^1.19.1",
    "pretty-format": "^24.9.0",
    "rimraf": "^3.0.0",
    "typescript": "~3.7.2"
  },
  "workspaces": ["bricks/*", "libs/*", "micro-apps/*", "templates/*"],
  "resolutions": {
    "@types/react": "^16.9.11",
    "lodash": "^4.17.15"
  }
}
